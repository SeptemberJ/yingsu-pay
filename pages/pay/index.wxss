/**index.wxss**/
page{
  background: #F2F2F2;
}
.TopBar{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #FFFFFF;
}
.TopBar image{
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 20rpx;
}
.backBt{
  background: #22AC38;
  color: #FFFFFF;
  margin-top: 40px;
  font-weight: 400;
}
.TopBar text{
  font-weight: bold;
}
.OrderInfo{
  width: 100%;
  background: #FFFFFF;
  margin-top: 20rpx;
}
.OrderInfo .Item{
  height:100rpx;
  font-size: 32rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.OrderInfo .Item:not(:first-of-type){
  border-top: 1px solid #F2F2F2;
}
.OrderInfo .Item text{
  color: #333;
}
.OrderInfo .Item text:first-of-type{
  color: #555;
}